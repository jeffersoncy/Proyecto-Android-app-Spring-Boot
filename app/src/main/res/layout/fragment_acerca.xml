<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.AcercaFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_acerca_fragment"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logo_nombre"
        android:layout_marginTop="@dimen/default_margin"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/descripcion_app_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_acerca_fragment"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/default_margin"
        android:gravity="center"
        android:text="Aplicación móvil que le permite a los estudiantes de la Universidad del Cauca reservar los diferentes escenarios deportivos en las sedes pertenecientes a la universidad como Túlcan y el Diamante, también permitirá que el estudiante pueda ver que escenarios tienen disponibilidad de reserva teniendo en cuenta las reservas de los demás estudiantes y las reservas de los eventos universitarios, esto con el fin de gestionar los horarios de cada escenario."/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/descripcion_app_fragment"
        android:background="@color/gray"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_tecnologias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/descripcion_app_fragment"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="19sp"
        android:text="Tecnologias"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_name_week"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/label_tecnologias"
        android:text="Week View"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_name_zxing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/label_name_week"
        android:text="Zxing"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_name_fire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/label_name_zxing"
        android:text="Firebase"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/label_name_fire"
        android:background="@color/gray"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_integrantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/label_name_fire"
        android:textStyle="bold"
        android:textSize="19sp"
        android:text="Integrantes"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_name_kevith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/label_integrantes"
        android:text="Kevith Felipe Bastidas"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_name_jeffer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/label_name_kevith"
        android:text="Jefferson Eduardo Campo"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_name_danny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/label_name_jeffer"
        android:text="Danny Alberto Diaz"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/label_name_juliana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginRight="@dimen/default_margin"
        app:layout_constraintTop_toBottomOf="@+id/label_name_danny"
        android:text="Juliana Mora Lopez"/>








</androidx.constraintlayout.widget.ConstraintLayout>
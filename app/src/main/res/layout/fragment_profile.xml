<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ProfileFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_profile_fragment"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/sin_foto"
        app:shapeAppearanceOverlay="@style/circleImageView"
        android:scaleType="centerCrop"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/name_profile_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/image_profile_fragment"
        app:layout_constraintStart_toEndOf="@+id/image_profile_fragment"
        android:layout_margin="@dimen/default_margin"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="Danny Prueba" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/email_profile_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_profile_fragment"
        app:layout_constraintStart_toEndOf="@+id/image_profile_fragment"
        android:layout_margin="@dimen/default_margin"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="d@gmail.com"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="8dp"
        app:layout_constraintTop_toBottomOf="@+id/image_profile_fragment"
        android:background="@color/gray"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/info_profile_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/image_profile_fragment"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="@dimen/default_margin"
        android:textStyle="bold"
        android:textSize="22sp"
        android:text="Informacion"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/id_profile_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/info_profile_fragment"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Identificacion: "/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/id_numb_profile_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/info_profile_fragment"
        app:layout_constraintStart_toEndOf="@+id/id_profile_fragment"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="10461702"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/code_profile_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/id_profile_fragment"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/default_margin"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text="Codigo: "/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/code_numb_profile_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/id_profile_fragment"
        app:layout_constraintStart_toEndOf="@+id/code_profile_fragment"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textSize="16sp"
        tools:text="10461702"/>






    <com.google.android.material.button.MaterialButton
        android:id="@+id/logout_fragment_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/icon_card"
        android:text="Cerrar Sesion"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="@dimen/default_margin"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
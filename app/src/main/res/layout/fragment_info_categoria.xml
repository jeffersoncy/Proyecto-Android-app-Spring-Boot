<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.InfoQrFragment">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/info_location_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Prueba titulo"
        android:layout_margin="@dimen/margin_info_qr"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/info_location_photo"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toBottomOf="@id/info_location_name"
        android:src="@drawable/nodisponible"
        android:layout_margin="@dimen/margin_info_qr"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/info_location_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/info_location_photo"
        android:gravity="center"
        android:layout_margin="@dimen/margin_info_qr"
        android:text="Preuba lera"
        android:textSize="@dimen/size_label_qr"/>

</androidx.constraintlayout.widget.ConstraintLayout>